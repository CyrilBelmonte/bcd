<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <!-- Index -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Listeners -->
  <listener>
    <listener-class>com.ucp.daemons.ProfilesDaemon</listener-class>
  </listener>

  <!-- Filters -->
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.ucp.cookwithease.filters.LoginFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>SetCharacterEncoding</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>SetCharacterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Login page -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.LoginServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Register page -->
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.RegisterServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- Logout page -->
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.LogoutServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <!-- Search page -->
  <servlet>
    <servlet-name>Search</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.SearchServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>

  <!-- Recipe page -->
  <servlet>
    <servlet-name>Recipe</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.RecipeServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Recipe</servlet-name>
    <url-pattern>/recipe</url-pattern>
  </servlet-mapping>

  <!-- Discover page -->
  <servlet>
    <servlet-name>Discover</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.DiscoverServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Discover</servlet-name>
    <url-pattern>/discover</url-pattern>
  </servlet-mapping>

  <!-- Assistant page -->
  <servlet>
    <servlet-name>Assistant</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.AssistantServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Assistant</servlet-name>
    <url-pattern>/assistant</url-pattern>
  </servlet-mapping>

  <!-- Friends page -->
  <servlet>
    <servlet-name>Friends</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.FriendsServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Friends</servlet-name>
    <url-pattern>/friends</url-pattern>
  </servlet-mapping>

  <!-- Bookmarks page -->
  <servlet>
    <servlet-name>Bookmarks</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.BookmarksServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Bookmarks</servlet-name>
    <url-pattern>/bookmarks</url-pattern>
  </servlet-mapping>

  <!-- Settings page -->
  <servlet>
    <servlet-name>Settings</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.SettingsServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Settings</servlet-name>
    <url-pattern>/settings</url-pattern>
  </servlet-mapping>

  <!-- Profile page -->
  <servlet>
    <servlet-name>Profile</servlet-name>
    <servlet-class>com.ucp.cookwithease.servlets.ProfileServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Profile</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
</web-app>
